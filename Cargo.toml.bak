[package]
name = "raibid-cli"
version = "0.1.0"
edition = "2021"
authors = ["Raibid Labs"]
description = "DGX Spark Personal CI Agent Pool - TUI-first developer tool for managing self-hosted CI agents"
license = "MIT OR Apache-2.0"
repository = "https://github.com/raibid-labs/raibid-cli"

[lib]
name = "raibid_cli"
path = "src/lib.rs"

[[bin]]
name = "raibid-cli"
path = "src/main.rs"

[dependencies]
clap = { version = "4", features = ["derive", "cargo"] }
anyhow = "1"
tracing = "0.1"
tracing-subscriber = { version = "0.3", features = ["env-filter"] }
serde = { version = "1", features = ["derive"] }
serde_json = "1"
serde_yaml = "0.9"
serde_path_to_error = "0.1"
toml = "0.8"
colored = "2"
chrono = { version = "0.4", features = ["serde"] }
ratatui = "0.25"
crossterm = "0.27"
rand = "0.8"
shellexpand = "3.1"
regex = "1"
dirs = "5.0"
comfy-table = "7"
dialoguer = "0.11"
reqwest = { version = "0.11", features = ["blocking"] }
sha256 = "1.5"
tokio = { version = "1", features = ["full"] }
kube = { version = "0.87", features = ["runtime", "derive"] }
k8s-openapi = { version = "0.20", features = ["v1_28"], default-features = false }
futures = "0.3"
serde_with = "3.4"
humantime = "2.1"
byte-unit = "5.1"
async-trait = "0.1"

[dev-dependencies]
assert_cmd = "2"
predicates = "3"
tempfile = "3"
